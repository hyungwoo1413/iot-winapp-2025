<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  -->
    <Button x:Key="custButton">Hello, WPF</Button>
    <!--  -->
    <SolidColorBrush x:Key="accentRed" Color="Red"/>
    <!-- 나이스버튼 스타일 설정 -->
    <Style x:Key="niceButton" TargetType="Button">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="58"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush>
                    <GradientStop Color="GreenYellow"/>
                    <GradientStop Color="LightYellow"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- 창 배경색 설정 -->
    <!-- RadialGradientBrush -->
    <LinearGradientBrush x:Key="custBackColor">
        <!-- Offset 0.그라데이션 시작점, 1.그라이데이션 끝점 -->
        <GradientStop Color="#FFDBFFE7" Offset="0"/>
        <GradientStop Color="#FF03882D" Offset="1"/>
    </LinearGradientBrush>
</ResourceDictionary>